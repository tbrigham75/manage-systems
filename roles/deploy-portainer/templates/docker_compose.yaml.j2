services:
    portainer:
        image: portainer/portainer-ce:{{ portainer_version }}
        container_name: portainer
        hostname: portainer
        ports:
            - 8000:8000
            - 9443:9443
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
            - portainer_data:/data
        restart: always        
volumes:
    portainer_data:
        external: true
        name: portainer_data